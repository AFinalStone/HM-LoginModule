<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/loginmodule_background_login_type_select" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="35dp">

        <LinearLayout
            android:id="@+id/ll_loginByChat"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/loginmodule_shape_common_btn_inblack"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_loginByWX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:src="@mipmap/loginmodule_icon_login_wx_chat" />

            <TextView
                android:id="@+id/tv_loginByWx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/loginmodule_login_type_by_wx_chat"
                android:textColor="@color/white"
                android:textSize="@dimen/textFontSize_16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_loginByMobile"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/uikit_shape_common_btn_selector"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_loginByMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:src="@mipmap/loginmodule_icon_mobile_black" />

            <TextView
                android:id="@+id/tv_loginByMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/loginmodule_login_type_by_mobile"
                android:textColor="#FF111111"
                android:textSize="@dimen/textFontSize_16" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

