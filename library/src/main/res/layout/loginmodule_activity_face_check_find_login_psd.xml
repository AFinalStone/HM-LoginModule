<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:bottomDividerIsShow="false"
        app:rightText="@string/base_customer_service"
        app:titleBackground="@color/transparent"
        app:titleText="@string/loginmodule_check_id_card" />

    <TextView
        android:id="@+id/tv_title"
        android:gravity="center"
        android:text="@string/loginmodule_please_input_id_card_sub_six"
        style="@style/UikitTextView.Auxiliary.Large"
        android:layout_marginTop="15dip"
        android:lineSpacingMultiplier="1.3"
        />

    <com.hm.iou.uikit.keyboard.input.HMInputCodeView
        android:id="@+id/inputCodeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" />

</LinearLayout>
