<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:bottomDividerIsShow="false"
        app:rightText="@string/base_customer_service"
        app:titleBackground="@color/transparent" />


    <TextView
        style="@style/UikitTextView"
        android:minHeight="30dp"
        android:text="@string/loginmodule_register_title"
        android:textSize="@dimen/textFontSize_22"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/loginmodule_icon_mobile_black" />


        <TextView
            android:id="@+id/et_mobile"
            style="@style/UikitEditText.InputMobile"
            android:layout_marginStart="10dp"
            android:textSize="@dimen/textFontSize_14" />

    </LinearLayout>

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/loginmodule_icon_register_message" />

        <EditText
            android:id="@+id/et_smsCheckCode"
            style="@style/UikitEditText.CheckCode" />

        <com.hm.iou.uikit.HMCountDownTextView
            android:id="@+id/tv_getSmsCheckCode"
            style="@style/UikitButton.CheckCode"
            android:enabled="true" />

    </LinearLayout>

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/uikit_icon_password" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.hm.iou.uikit.ShowHidePasswordEditText
                android:id="@+id/et_password"
                style="@style/UikitEditText.Password"
                android:inputType="textVisiblePassword" />
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />


    <TextView
        android:id="@+id/tv_register"
        style="@style/UikitButton.Bottom"
        android:layout_marginTop="30dp"
        android:text="@string/loginmodule_register_btn_reg" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <TextView
            style="@style/UikitTextView"
            android:minHeight="18dp"
            android:text="@string/loginmodule_register_tv_desc"
            android:textColor="#878787"
            android:textSize="@dimen/textFontSize_13" />

        <TextView
            android:id="@+id/tv_agreement01"
            style="@style/UikitTextView"
            android:minHeight="30dp"
            android:text="@string/loginmodule_register_tv_agreement01"
            android:textColor="#262626"
            android:textSize="@dimen/textFontSize_13" />

        <TextView
            style="@style/UikitTextView"
            android:minHeight="30dp"
            android:text="@string/loginmodule_register_tv_and"
            android:textColor="#878787"
            android:textSize="@dimen/textFontSize_13" />

        <TextView
            android:id="@+id/tv_agreement02"
            style="@style/UikitTextView"
            android:minHeight="30dp"
            android:text="@string/loginmodule_register_tv_agreement02"
            android:textColor="#262626"
            android:textSize="@dimen/textFontSize_13" />
    </LinearLayout>
</LinearLayout>
