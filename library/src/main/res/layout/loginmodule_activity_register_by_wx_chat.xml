<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uikit_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:bottomDividerIsShow="false"
        app:rightText="@string/base_customer_service"
        app:backIcon="@mipmap/uikit_icon_close_black"
        app:titleBackground="@color/transparent"
        app:titleText="@string/loginmodule_register_by_wx_chat_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/loginmodule_icon_mobile_black" />


        <com.hm.iou.uikit.ClearEditText
            android:id="@+id/et_mobile"
            style="@style/UikitEditText.InputMobile"
            android:layout_width="0dp"
            android:hint="@string/loginmodule_register_by_wx_chat_et_mobileHint"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1" />


    </LinearLayout>

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/loginmodule_icon_register_message" />

        <EditText
            android:id="@+id/et_smsCheckCode"
            style="@style/UikitEditText.CheckCode" />

        <com.hm.iou.uikit.HMCountDownTextView
            android:id="@+id/tv_getSMSCheckCode"
            style="@style/UikitButton.CheckCode"
            android:enabled="false" />

    </LinearLayout>

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/uikit_icon_password" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.hm.iou.uikit.ShowHidePasswordEditText
                android:id="@+id/et_password"
                style="@style/UikitEditText.Password"
                android:hint="@string/loginmodule_register_by_wx_chat_et_passwordHint"
                android:inputType="textVisiblePassword" />
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />


    <Button
        android:id="@+id/btn_next"
        style="@style/UikitButton.Bottom"
        android:layout_marginTop="32dp"
        android:text="@string/loginmodule_register_by_wx_chat_register" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <TextView
            style="@style/UikitTextView"
            android:minHeight="18dp"
            android:text="@string/loginmodule_register_desc"
            android:textColor="#878787"
            android:textSize="@dimen/textFontSize_13" />

        <TextView
            android:id="@+id/tv_agreement01"
            style="@style/UikitTextView"
            android:minHeight="30dp"
            android:text="@string/loginmodule_register_agreement01"
            android:textColor="#262626"
            android:textSize="@dimen/textFontSize_13" />

        <TextView
            style="@style/UikitTextView"
            android:minHeight="30dp"
            android:text="@string/loginmodule_register_and"
            android:textColor="#878787"
            android:textSize="@dimen/textFontSize_13" />

        <TextView
            android:id="@+id/tv_agreement02"
            style="@style/UikitTextView"
            android:minHeight="30dp"
            android:text="@string/loginmodule_register_agreement02"
            android:textColor="#262626"
            android:textSize="@dimen/textFontSize_13" />
    </LinearLayout>

</LinearLayout>
