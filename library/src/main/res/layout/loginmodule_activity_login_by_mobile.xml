<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:bottomDividerIsShow="false" />

    <TextView
        style="@style/UikitTextView"
        android:text="@string/loginmodule_login_by_mobile_title"
        android:textColor="#FF222222"
        android:textSize="@dimen/textFontSize_22"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/loginmodule_icon_mobile_black" />

        <TextView
            android:id="@+id/et_mobile"
            style="@style/UikitEditText.InputMobile"
            android:layout_marginStart="10dp"
            android:textSize="@dimen/textFontSize_14" />

    </LinearLayout>

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/uikit_icon_password" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.hm.iou.uikit.ShowHidePasswordEditText
                android:id="@+id/et_password"
                style="@style/UikitEditText.Password" />
        </LinearLayout>


    </LinearLayout>


    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <TextView
        android:id="@+id/tv_forgetPassword"
        style="@style/UikitTextView"
        android:layout_gravity="right"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:minHeight="40dp"
        android:text="@string/loginmodule_login_by_mobile_tv_forgetPassword"
        android:textSize="@dimen/textFontSize_14" />

    <TextView
        android:id="@+id/tv_login"
        style="@style/UikitButton.Bottom"
        android:layout_marginTop="52dp"
        android:text="@string/loginmodule_login_by_mobile_btn_login" />

</LinearLayout>
