<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:bottomDividerIsShow="false"
        app:titleText="@string/loginmodule_login_by_mobile_title" />

    <TextView
        android:id="@+id/et_mobile"
        style="@style/LoginMobile"
        />

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <com.hm.iou.uikit.ShowHidePasswordEditText
        android:id="@+id/et_password"
        style="@style/LoginPassword"
        />

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <TextView
        android:id="@+id/tv_forgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:minHeight="60dp"
        android:text="@string/loginmodule_login_by_mobile_tv_forgetPassword"
        android:textColor="@color/uikit_text_sub_content"
        android:textSize="@dimen/textFontSize_14" />

    <Button
        android:id="@+id/btn_login"
        style="@style/UikitHMButton.Large.Main"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text="@string/loginmodule_login_by_mobile_btn_login" />

</LinearLayout>
