<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_dialog_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/uikit_bg_alert_dialog"
    android:orientation="vertical"
    android:paddingTop="20dip"
    >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册协议"
        android:gravity="center"
        android:textColor="@color/uikit_text_main_content"
        android:textSize="@dimen/uikit_main_title_text_size"
        android:textStyle="bold"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.5"
            android:text="@string/loginmodule_dialog_useragreement"
            android:textColor="@color/uikit_text_auxiliary"
            android:textSize="@dimen/uikit_main_content_text_size"
            android:paddingLeft="32dip"
            android:paddingRight="32dip"
            android:paddingTop="12dip"
            android:paddingBottom="35dip"
            android:scrollbars="vertical"
            />
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/uikit_divider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_neg"
            style="@style/UikitHMDialogButton.Secondary"
            android:layout_width="0px"
            android:layout_weight="1"
            android:text="不同意"
            />

        <Button
            android:id="@+id/btn_pos"
            style="@style/UikitHMDialogButton.Main"
            android:layout_height="wrap_content"
            android:layout_width="0px"
            android:layout_weight="1"
            android:text="同意"
            />
    </LinearLayout>

</LinearLayout>