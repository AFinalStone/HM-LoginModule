<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="注册协议"
        android:textColor="@color/black"
        android:textSize="@dimen/textFontSize_18"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="400dip"
        android:lineSpacingMultiplier="1.5"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="25dp"
        android:text="@string/loginmodule_dialog_useragreement"
        android:textColor="#333333"
        android:textSize="@dimen/textFontSize_16"
        android:scrollbars="vertical"
        />


    <ImageView
        android:id="@+id/iv_line01"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/iosAlertDialog_line"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_neg"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/uikit_selector_alertdialog_left"
            android:gravity="center"
            android:textColor="#ff000000"
            android:textSize="@dimen/textFontSize_18"
            android:text="不同意"
            />

        <ImageView
            android:id="@+id/iv_line02"
            android:layout_width="1px"
            android:layout_height="52dp"
            android:background="@color/iosAlertDialog_line"
            />

        <Button
            android:id="@+id/btn_pos"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/uikit_selector_alertdialog_right"
            android:gravity="center"
            android:textColor="@color/uikit_blue"
            android:textSize="@dimen/textFontSize_18"
            android:text="同意"
            />
    </LinearLayout>

</LinearLayout>