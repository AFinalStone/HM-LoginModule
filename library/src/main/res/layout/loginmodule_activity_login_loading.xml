<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginmodule_background_loading"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="42dp"
    android:paddingTop="123dp">


    <com.hm.iou.uikit.ShapedImageView
        android:id="@+id/iv_header"
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/uikit_icon_header_unknow"
        app:shape_mode="circle" />

    <TextView
        android:id="@+id/tv_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="@dimen/textFontSize_18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="22dp"
        android:minWidth="153dp"
        android:text="@string/loginLoading_loading"
        android:textColor="#ff303030"
        android:textSize="@dimen/textFontSize_16" />

    <com.hm.iou.uikit.loading.ProgressImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="14dp" />

</LinearLayout>
