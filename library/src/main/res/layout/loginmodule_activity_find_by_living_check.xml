<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:bottomDividerIsShow="false" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/loginmodule_find_by_living_check_title"
        android:textColor="#FF222222"
        android:textSize="@dimen/textFontSize_22"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="292dp"
        android:layout_height="44dp"
        android:layout_marginTop="42dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_code1"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/uikit_shape_btn_input_code"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#FF111111"
            android:textSize="@dimen/textFontSize_30" />

        <TextView
            android:id="@+id/tv_code2"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/uikit_shape_btn_input_code"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#FF111111"
            android:textSize="@dimen/textFontSize_30" />

        <TextView
            android:id="@+id/tv_code3"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/uikit_shape_btn_input_code"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#FF111111"
            android:textSize="@dimen/textFontSize_30" />

        <TextView
            android:id="@+id/tv_code4"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/uikit_shape_btn_input_code"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#FF111111"
            android:textSize="@dimen/textFontSize_30" />

        <TextView
            android:id="@+id/tv_code5"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/uikit_shape_btn_input_code"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#FF111111"
            android:textSize="@dimen/textFontSize_30" />

        <TextView
            android:id="@+id/tv_code6"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/uikit_shape_btn_input_code"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#FF111111"
            android:textSize="@dimen/textFontSize_30" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.hm.iou.uikit.keyboard.HMKeyBoardView
        android:id="@+id/keyboardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</LinearLayout>
