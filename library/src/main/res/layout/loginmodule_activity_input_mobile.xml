<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:bottomDividerIsShow="false"
        app:titleText="@string/loginmodule_input_mobile_title" />

    <com.hm.iou.uikit.MobileInputEditText
        android:id="@+id/et_mobile"
        style="@style/LoginMobile"
        android:hint="输入11位手机号"
        android:gravity="center"
        android:textSize="24dip"
        />

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <Button
        android:id="@+id/btn_next"
        style="@style/UikitHMButton.Large.Main"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text="@string/loginmodule_input_mobile_btn_next" />

    <Button
        android:id="@+id/btn_switch_env"
        style="@style/UikitHMButton.Large.Main"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text="切换API环境"
        android:visibility="gone"
        />

</LinearLayout>
