<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:bottomDividerIsShow="false"
        app:rightText="@string/base_customer_service"
        app:titleBackground="@color/transparent"
        app:titleText="@string/loginmodule_input_phone_code_title" />

    <TextView
        style="@style/UikitTextView.Auxiliary.Large"
        android:text="@string/loginmodule_input_phone_code_send_code"
        android:layout_marginTop="15dip"
        />


    <TextView
        android:id="@+id/tv_mobile"
        style="@style/UikitTextView.Auxiliary.Large"
        android:layout_marginTop="8dip"
        />

    <com.hm.iou.uikit.keyboard.input.HMInputCodeView
        android:id="@+id/inputCodeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/tv_retryCode"
        style="@style/UikitTextView.Auxiliary.Normal"
        android:layout_marginTop="12dp"
        android:text="@string/loginmodule_input_phone_code_try_again"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingBottom="10dip"
        />


</LinearLayout>






