<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.hm.iou.uikit.HMTopBarView
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/uikit_topbar_height"
            app:bottomDividerIsShow="false"
            app:rightText="@string/base_customer_service"
            app:titleBackground="@color/transparent" />

        <TextView
            style="@style/UikitTextView"
            android:minHeight="28dp"
            android:text="@string/loginmodule_input_id_card_code_title"
            android:textSize="@dimen/textFontSize_22"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_mobile"
            style="@style/UikitTextView"
            android:minHeight="28dp"
            android:textSize="@dimen/textFontSize_22"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="44dp"
            android:layout_marginTop="42dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_code1"
                style="@style/UikitTextView.InputNumberCode"
                android:layout_marginEnd="5dp" />

            <TextView
                android:id="@+id/tv_code2"
                style="@style/UikitTextView.InputNumberCode"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp" />

            <TextView
                android:id="@+id/tv_code3"
                style="@style/UikitTextView.InputNumberCode"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp" />

            <TextView
                android:id="@+id/tv_code4"
                style="@style/UikitTextView.InputNumberCode"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp" />

            <TextView
                android:id="@+id/tv_code5"
                style="@style/UikitTextView.InputNumberCode"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp" />

            <TextView
                android:id="@+id/tv_code6"
                style="@style/UikitTextView.InputNumberCode"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_retryCode"
            style="@style/UikitTextView"
            android:layout_marginTop="12dp"
            android:minHeight="18dp"
            android:minWidth="292dp"
            android:text="@string/loginmodule_input_id_card_code_try_again"
            android:textSize="@dimen/textFontSize_13" />


    </LinearLayout>

    <com.hm.iou.uikit.keyboard.HMKeyBoardView
        android:id="@+id/keyboardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>





