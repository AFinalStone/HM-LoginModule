<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.hm.iou.uikit.HMTopBarView
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/uikit_topbar_height"
            app:bottomDividerIsShow="false" />

        <TextView
            style="@style/UikitTextView"
            android:minHeight="28dp"
            android:text="@string/inputCode_title"
            android:textSize="@dimen/textFontSize_22"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_phone"
            style="@style/UikitTextView"
            android:minHeight="28dp"
            android:textSize="@dimen/textFontSize_22"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="44dp"
            android:layout_marginTop="42dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_code1"
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/uikit_shape_btn_input_code"
                android:gravity="center"
                android:inputType="number"
                android:textColor="#FF111111"
                android:textSize="@dimen/textFontSize_30" />

            <TextView
                android:id="@+id/tv_code2"
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/uikit_shape_btn_input_code"
                android:gravity="center"
                android:inputType="number"
                android:textColor="#FF111111"
                android:textSize="@dimen/textFontSize_30" />

            <TextView
                android:id="@+id/tv_code3"
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/uikit_shape_btn_input_code"
                android:gravity="center"
                android:inputType="number"
                android:textColor="#FF111111"
                android:textSize="@dimen/textFontSize_30" />

            <TextView
                android:id="@+id/tv_code4"
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/uikit_shape_btn_input_code"
                android:gravity="center"
                android:inputType="number"
                android:textColor="#FF111111"
                android:textSize="@dimen/textFontSize_30" />

            <TextView
                android:id="@+id/tv_code5"
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/uikit_shape_btn_input_code"
                android:gravity="center"
                android:inputType="number"
                android:textColor="#FF111111"
                android:textSize="@dimen/textFontSize_30" />

            <TextView
                android:id="@+id/tv_code6"
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/uikit_shape_btn_input_code"
                android:gravity="center"
                android:inputType="number"
                android:textColor="#FF111111"
                android:textSize="@dimen/textFontSize_30" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_retryCode"
            android:layout_width="292dp"
            android:layout_height="18dp"
            android:layout_marginTop="12dp"
            android:text="@string/tv_retry_code"
            android:textColor="#FFF1C238"
            android:textSize="@dimen/textFontSize_13" />


    </LinearLayout>

    <com.hm.iou.uikit.keyboard.VirtualKeyboardView
        android:id="@+id/virtualKeyboardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>





